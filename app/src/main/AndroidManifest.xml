<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.nemesis.watchlist">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <permission android:name="com.nemesis.watchlist.READ_DATABASE" android:protectionLevel="normal"/>
    <permission android:name="com.nemesis.watchlist.WRITE_DATABASE" android:protectionLevel="normal"/>

    <application
        android:name=".WatchList"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_configurations"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning"
        tools:targetApi="n">
        <provider
            android:name=".data.contentprov.WatchContentProvider"
            android:authorities="com.nemesis.watchlist"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.nemesis.watchlist.READ_DATABASE"
            android:writePermission="com.nemesis.watchlist.WRITE_DATABASE"/>

        <activity
            android:name=".ui.release.ReleaseActivity"
            android:label="@string/text_release_today" />

        <receiver
            android:name=".service.ReleaseReminder"
            android:enabled="true"
            android:exported="true"/>
        <receiver
            android:name=".service.Reminder"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".ui.reminder.RemainderActivity"
            android:label="@string/text_reminder" />

        <receiver android:name=".widget.ImagePosterWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/image_poster_widget_info" />
        </receiver>

        <activity
            android:name=".ui.detail.DetailFaveMoviesActivity"
            android:label="@string/label_detail" />
        <activity
            android:name=".ui.detail.DetailSeriesActivity"
            android:label="@string/label_detail" />
        <activity
            android:name=".ui.detail.DetailMovieActivity"
            android:label="@string/label_detail" />
        <activity
            android:name=".ui.main.MainActivity"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".widget.ImagePosterWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/image_poster_widget_info" />
        </receiver>

        <service
            android:name=".widget.StackWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />
    </application>

</manifest>